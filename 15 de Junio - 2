    private void botonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_botonActionPerformed
        // TODO add your handling code here:
       String nombre = cajanombre.getText();
       String apellido = cajaapellido.getText();
       String meses= Meses.getSelectedItem().toString();
       
       String info= "Su nombre es: " +nombre+ "\nSu apellido es: " +apellido;
       info+="\nMes que se le facilita trabajar: " +meses;
       info+= "\nSus estudios son: ";
       JRadioButton[] rdbs = {jardin,primaria,secundaria,uni,ninguno};
       for (int i=0; i<rdbs.length;i++){
           if (rdbs[i].isSelected()){
               info += rdbs[i].getText();
           }
       } 
       info+="\nSu experiencia es de: " +barra.getValue();
       
       JOptionPane.showMessageDialog(this, info, "Sus resultados son: ",JOptionPane.INFORMATION_MESSAGE);
       // La unica funcion que no me arranca es la del genero pq no me figura la opcion isSelected para el Checkbox y no lo puedo solucionar

        
    }//GEN-LAST:event_botonActionPerformed

    private void barraStateChanged(javax.swing.event.ChangeEvent evt) {//GEN-FIRST:event_barraStateChanged
        // TODO add your handling code here:
        cero.setText(String.valueOf(barra.getValue()));
    }//GEN-LAST:event_barraStateChanged

